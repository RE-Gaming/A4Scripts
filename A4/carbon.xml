<theme>
    <formatVersion>3</formatVersion>

	<view name="system">

		<carousel name="systemcarousel"> <!--This is for the console carousel-->
			<type>vertical</type>
			<pos>0.05 0</pos>
			<size>0.5 1</size>
			<color>FFFFFF00</color>
			<maxLogoCount>5</maxLogoCount>
			<logoScale>1.5</logoScale>
			<logoSize>0.3 0.2</logoSize>
		</carousel>
		
		<text name="systemInfo"> <!--This is for "'X' Games Available" text, removed-->
			<color>00000000</color>
		</text>

		<image name="background" extra="true"> <!--This is currently set to a plain color-->
			<tile>true</tile>
			<size>1 1</size>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<path>./art/bg_color.png</path>
			<color>666666</color>
		</image>

		<image name="CenterFade" extra="true"> <!--This is currently to a vertical grandient, low resolution, could make my own-->
			<tile>false</tile>
			<size>0.6 1</size>
			<pos>0.3 0.5</pos>
			<origin>0.5 0.5</origin>
			<path>./art/centerfadevertical.png</path>
			<color>FFFFFF99</color>
		</image>
		
		<!--
		<image name="BottomBar" extra="true">
			<tile>false</tile>
			<size>1 0.1</size>
			<pos>0 1</pos>
			<origin>0 1</origin>
			<path>./art/bottom.png</path>
			<color>8b0000c0</color>
		</image>
		-->
		
		<image name="ControllerOverlay" extra="true"> <!--default color and position for all consoles-->
			<color>FFFFFF</color>
			<tile>false</tile>
			<pos>0.775 0.475</pos>
			<origin>0.5 0.5</origin>
			<size>0.4 0</size>
		</image>

	</view>

	<view name="basic">

		<image name="background" extra="true"> <!--This is currently set to a plain color-->
			<tile>true</tile>
			<size>1 1</size>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<path>./art/bg_color.png</path>
			<color>666666</color>
		</image>

		<textlist name="gamelist">
			<selectorColor>898989</selectorColor>
			<selectedColor>FFFFFF</selectedColor>
			<primaryColor>FFFFFF</primaryColor>
			<secondaryColor>8B0000</secondaryColor>
			<fontPath>./art/Cabin-Bold.ttf</fontPath>
			<fontSize>0.060</fontSize>
			<pos>0.025 0.18</pos>
			<size>0.950 0.77</size>
			<alignment>center</alignment>
			<forceUppercase>0</forceUppercase>
			<scrollSound>./art/scroll.wav</scrollSound>
		</textlist>

	</view>

	<view name="detailed">

		<image name="background" extra="true"> <!--This is currently set to a plain color-->
			<tile>true</tile>
			<size>1 1</size>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<path>./art/bg_color.png</path>
			<color>666666</color>
		</image>

		<image name="md_image">
			<pos>0.75 0.775</pos>
			<maxSize>0.45 0.4</maxSize>
			<origin>0.5 0.5</origin>
		</image>

		<text name="md_description">
			<color>FFFFFF</color>
			<forceUppercase>0</forceUppercase>
			<fontPath>./art/Cabin-Bold.ttf</fontPath>
			<fontSize>0.045</fontSize>
			<size>0.45 0.34</size>
			<pos>0.525 0.21</pos>
		</text>

		<textlist name="gamelist">
			<selectorColor>898989</selectorColor>
			<selectedColor>FFFFFF</selectedColor>
			<primaryColor>FFFFFF</primaryColor>
			<secondaryColor>8B0000</secondaryColor>
			<fontPath>./art/Cabin-Bold.ttf</fontPath>
			<forceUppercase>0</forceUppercase>
			<pos>0.025 0.18</pos>
			<size>0.475 0.74</size>
			<alignment>left</alignment>
			<horizontalMargin>0.00</horizontalMargin>
			<fontSize>0.05</fontSize>
			<scrollSound>./art/scroll.wav</scrollSound>
		</textlist>
		
		<image name="textbackground" extra="true"> <!--This is currently set to a plain color-->
			<tile>true</tile>
			<size>0.46 0.34</size>
			<pos>0.515 0.21</pos>
			<origin>0 0</origin>
			<path>./art/bg_color.png</path>
			<color>11111199</color>
		</image>

		</view>

	<view name="basic, detailed">

		<image name="top" extra="true">
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 0.20</size>
			<path>./art/top.png</path>
			<color>FFFFFF</color>
		</image>
		
		<image name="logo">
			<pos>0.025 0.1</pos>
			<maxSize>0.6 0.18</maxSize>
			<origin>0 0.5</origin>
		</image>
		
		<image name="logo2" extra="true">
			<pos>0.75 0.10</pos>
			<maxSize>0.50 0.18</maxSize>
			<origin>0 0.5</origin>
			<color>FFFFFF</color>
		</image>

	</view>
	
	<view name="system, basic, detailed">
		<helpsystem name="help"> <!--This is for bottom text, removed-->
			<textColor>FFFFFF</textColor>
			<iconColor>FFFFFF</iconColor>
			<pos>1 1</pos>
			<fontSize>0.035</fontSize>
		</helpsystem>
	</view>

</theme>